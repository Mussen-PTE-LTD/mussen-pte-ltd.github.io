{% if categories_list == null %}
  {% assign categories_list = sorted_categories_list %}
{% endif %}
{% for category in categories_list %}
  {% capture capitalized_category %}
    {% assign words = category | split:"-" %}
    {% for word in words %}
      {{ word | capitalize }}
    {% endfor %}
  {% endcapture %}
  {% assign capitalized_category = capitalized_category | split:" " | join %}
        <li{% if forloop.first %} class="active"{% endif %}><a href="#{{ category }}-ref">
          {{ capitalized_category }}<span class="badge pull-right">{{ site.categories[category].size }}</span>
        </a></li>
{% endfor %}
{% assign categories_list = nil %}
